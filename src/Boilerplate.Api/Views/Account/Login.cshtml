@model string;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta name="generator" content="Hugo 0.88.1" />
    <title>Sign in</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous" />

    <link href="/css/devextreme/bootstrap.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700&display=swap"
          rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="/css/SigninInNew.css" rel="stylesheet" />

</head>
<body>
    <img src="/Images/Logo.jpg" alt="" />
    <div class="center">
        
        <form method="post" enctype="multipart/form-data" asp-controller="account" asp-action="login">


            @if (Model == "Error")
            {
                <div class="alert alert-danger" role="alert">
                    Error, Wrong email or password!
                </div>
            }

            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            <form method="post">
                <div class="form-floating">
                    <input type="email" class="form-control" name="Email" id="Email" placeholder="name@example.com" />
                    <span></span>
                    <label>UserName</label>
                </div>

                <div class="form-floating">
                    <input type="password" class="form-control" id="Password" name="Password" placeholder="Password" />
                    <span></span>
                    <label>Password</label>
                </div>

                

                <button class="w-100 btn btn-lg btn-primary" type="submit">
                    Sign in
                </button>

                <p class="mt-5 mb-3 text-muted">
                    &copy;2022 ProScan. All rights reserved.
                </p>
            </form>


            <p class="mt-5 mb-3 text-muted">
                &copy;2022 ProScan. All rights reserved.
            </p>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
</body>
</html>
